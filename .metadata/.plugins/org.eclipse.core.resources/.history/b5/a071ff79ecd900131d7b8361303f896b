package com.example.coursify.view;

import android.support.v4.app.Fragment;
import android.support.v4.widget.DrawerLayout;
import android.view.View;

import com.example.coursify.R;

public class FragmentSwitcher {

	public static <T extends Fragment> void switchToFragment(T destination,
			MainActivity main) {
		DrawerLayout drawer = main.getDrawerLayout();
		drawer.removeViewAt(0);
		View current = main.findViewById(R.id.content_fragment);

		drawer.addView(
				destination.onCreateView(main.getLayoutInflater(),
						main.getDrawerLayout(), null), 0);
	}
}
